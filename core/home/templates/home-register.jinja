{% extends "login/layout.jinja" %}
{% set head_title='Register' %}

{% block page_form %}
    <form class="login-form container d-flex flex-column align-items-center" 
          method="POST" action="{{ url_for('home.login', next=next) }}">

        {{ form.csrf_token }}

        <!-- Header -->
        <div class="row w-100 py-5 d-flex justify-content-center">
            <div class="col-10 text-center">
                <h4>{{ _('Fournissez les informations suivantes pour continuer') }}</h4>
                <p class="text-danger">Vous devez payer les frais de concours avant de débuter l'inscription</p>
            </div>
        </div>
        
        {% if error %}
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4 text-center">
                <div class="alert alert-danger fade show">{{ error }}</div>
            </div>
        </div>
        {% endif %}

        <!-- Identifiant -->
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4">
                {{ form.id(class_="form-control", placeholder=_("Saisissez votre numéro de paiement"), size=20) }}           
            </div>
        </div><!-- End Identifiant -->

        <!-- Securite -->
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4">   
                {{ form.new_pwd(class_="form-control", placeholder=_("Créez votre mot de passe")) }}        
            </div>
        </div>

        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4">   
                {{ form.confirm_pwd(class_="form-control", placeholder=_("Confirmez votre mot de passe")) }}        
            </div>
        </div><!-- End Securite -->

        <div class="row pt-5 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4 flex-column align-items-start">
                <input class="btn btn-primary w-100" type="submit" value="{{ _('Connexion') }}">
                <ul class="login-links">
                    <li><a class="btn btn-link mt-5" href="#">{{ _('Continuer une ancienne inscription ?') }}</a></li>
                    <li><a class="btn btn-link mt-1" href="{{ url_for('home.index') }}">{{ _("Retour a l'accueil !") }}</a></li>
                </ul>
            </div>
        </div>
    </form>
{% endblock %}

