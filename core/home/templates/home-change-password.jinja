{% extends "login/layout.jinja" %}
{% set head_title='Mot de passe' %}

{% block page_form %}
    <form class="login-form container d-flex flex-column align-items-center" 
          method="POST" action="{{ url_for('home.change_password') }}">

        {{ form.csrf_token }}

        <!-- Header -->
        <div class="row w-100 pt-5 pb-3 d-flex justify-content-center">
            <div class="col-10 text-center">
                <h4>{{ _('Changer mot de passe') }}</h4>
                <h5 class="text-primary">{{ current_user.id }}</h5>
            </div>
        </div>
        
        {% if error %}
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4 text-center">
                <div class="alert alert-danger fade show">{{ error }}</div>
            </div>
        </div>
        {% endif %}

        <!-- Identifiant -->
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4">
                {{ form.new_pwd(class_="form-control", placeholder=_("Nouveau mot de passe")) }}           
            </div>
        </div><!-- End Identifiant -->

        <!-- Securite -->
        <div class="field row my-2 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4">   
                {{ form.confirm_pwd(class_="form-control", placeholder=_("Confirmer mot de passe")) }}        
            </div>
        </div><!-- End Securite -->

        <div class="row pt-5 w-100 d-flex justify-content-center">
            <div class="col-10 col-lg-4 flex-column align-items-start">
                <input class="btn btn-primary w-100" type="submit" value="{{ _('Valider') }}">
            </div>
        </div>
    </form>
{% endblock %}

